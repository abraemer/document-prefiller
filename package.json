{
  "name": "document-prefiller",
  "version": "1.0.0",
  "description": "A desktop application for prefilling Microsoft Word documents with replacement markers",
  "main": "dist-electron/main/index.js",
  "type": "module",
  "author": "",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "packageManager": "yarn@1.22.0",
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "sass": "^1.97.3",
    "sass-loader": "^16.0.6",
    "vue": "^3.4.0",
    "vuetify": "^3.11.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^1.1.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vitest": "^1.1.0",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^1.8.0"
  },
  "build": {
    "appId": "com.documentprefiller.app",
    "productName": "Document Prefiller",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ]
  }
}
